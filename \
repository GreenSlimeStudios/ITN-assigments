import random

one = int(random.random()*100)
two = int(random.random()*100)+1

razem = one + two
liczby=[]
print(one,razem)

for i in range(0,one):
    liczby.append(1)


for i in range(0,two):
    liczby.append(2)


found = False
ind = int(razem/2)
turn = 0

while True:
    turn+=1
    if liczby[ind] == 1:
        ind = int(ind+ind/turn)
    else:
        if liczby[ind-1] == 1:
            break;
        else:
            ind = int(ind-ind/turn)

print(ind)
